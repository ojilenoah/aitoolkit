{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "server/index.ts" 
    },
    { 
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|gif|json)$)",
      "dest": "client/dist/$1"
    },
    { 
      "src": "/(.*)", 
      "dest": "client/dist/index.html" 
    }
  ]
}